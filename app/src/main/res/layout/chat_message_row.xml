<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/otherAuthorTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:text="@string/author"
        android:textColor="#2ecc71"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/otherMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/other_chat_message_background"
        android:padding="16dp"
        android:text="@string/message" />

    <TextView
        android:id="@+id/thisAuthorTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:gravity="end"
        android:text="@string/author"
        android:textColor="#00a8ff"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/thisMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/this_chat_message_background"
        android:gravity="end"
        android:padding="16dp"
        android:text="@string/message" />
</LinearLayout>